
//- --------------------------------------------------------
//- Main
//- --------------------------------------------------------

html
  font-size: ($p/16) * 100%
  width: 100%
  *
    box-sizing: border-box

body
  font-family: 'Roboto', sans-serif
  font-weight: 400
  width: 100%

  a
    text-decoration: none

  h1, h2, h3, h4, h5
    margin-top: 0

  h1
    font-size: em($h1)
    font-weight: 300
    color: $grey

    +media('tablet')
      font-size: em($h2)

  h2
    font-size: em($h2)
    font-weight: 300
    color: $grey

    +media('tablet')
      font-size: em($h3)

  h3
    font-size: em($h3)
    font-weight: 300
    color: $mid-grey

    +media('tablet')
      font-size: em($h4)

  h4
    font-size: em($h4)

    +media('tablet')
      font-size: em($h5)

  h5
    font-size: em($h5)

    +media('tablet')
      font-size: em($p)

  p
    font-size: em($p)
    
  .desktop
    +media('tablet')
      display: none


  a, button
    &:focus
      outline: none
      -webkit-box-shadow: 0px 0px 4px 0px $focus
      box-shadow: 0px 0px 4px 0px $focus

.wrapper
  text-align: center

button
  border: 0
  box-shadow: 0
  border-radius: 5px
  padding: 25px 40px
  font-size: em($h5)
  transition: background-color $transition, color $transition, border-color $transition

  &.small
    padding: 10px 25px

  &.green
    background-color: $theme-color
    color: $white
    border: 2px solid $theme-color

    &:hover
      background-color: $white
      color: $theme-color

  &.transparent
    background-color: transparent
    border: 2px solid $light-grey
    color: $dark-grey

    &:hover
      background-color: $theme-color
      color: $white
      border-color: $theme-color

section
  display: block
  width: 100%
  margin: 0 auto
  max-width: 1150px
  padding: $gutter 25px
  
  +media('tablet') 
    padding: $mob-gutter 10px

  h1, h3
    max-width: 500px
    margin-left: auto
    margin-right: auto

  h2
    max-width: 920px
    margin-left: auto
    margin-right: auto

/* ---- nav ---- */
.nav
  padding: 55px 25px 15px
  
  +media('tablet')
    padding: 10px
    
  .logo
    float: left
    
    +media('tablet')
      margin-top: 10px
      
  .cta
    float: right
    font-size: em($h5)

    a
      color: $dark-grey
      text-decoration: none

      &:hover
        color: $theme-color


    a, button
      margin: 0 16px


/* ---- hero ---- */

.hero
  padding-bottom: 50px
  
  +media('mobile')
    padding-top: $gutter

/* ---- graph ---- */

.graph
  width: 100%
  height: 320px
  overflow: hidden
  position: relative
  
  canvas
    height: 320px

  .graph-inner
    position: absolute
    width: 200%
    left: 50%
    margin-left: -100%

.drag-slider-container  
  position: relative
  height: 50px
  width: 95%
  margin: 45px auto 180px
  max-width: 1150px
  color: $dragger
  text-align: center
  padding-bottom: 80px
  
  +media('tablet')
    margin: $mob-gutter auto
  
  .dragdealer 
    position: relative
    height: 30px
    background: transparent
    
    &:before
      content: ''
      display: block
      position: absolute
      width: 100%
      height: 2px
      margin-top: -1px
      top: 50%
      background: #e1e8ee
  
  .label
    text-align: center
    display: inline-block
    position: absolute
    bottom: 0
    width: 100%
    text-align: center
    left: 0  
    margin: 0 
  #just-a-slider
    position: absolute
    left: 50%
    top: 50%
    -webkit-transform: translate(-50%, -50%)
    transform: translate(-50%, -50%)
    height: 25px
    width: 100%
    border-radius: 3px

  #just-a-slider .handle
    height: 25px
    line-height: 25px
    border-radius: 20px
    width: 40px
    background-color: $dragger
    background-image: url('../images/drag-icon.png')
    background-position: center center
    background-repeat: no-repeat
    background-position: center center

  #just-a-slider .value
    padding: 0 0 0 5px
    font-size: 15px
    font-weight: bold

/* ---- buy ---- */

.buy
  position: relative
  z-index: 2
  padding-top: 0

  .scroll-cta
    background-image: url('../images/chev-down.png')
    background-color: $white
    background-repeat: no-repeat
    background-position: center center
    background-size: 16px
    display: block
    position: absolute
    left: 50%
    bottom: -25px
    margin-left: -25px
    width: 50px
    height: 50px
    border-radius: 50%
    padding: 0
    border: 1px solid $off-white
    text-indent: -1000px
    overflow: hidden
    standard-box-shadow()

    &:hover
      background-color: $off-white

/* ---- slider ---- */

.slider
  width: 100%
  border-top: 1px solid $off-white
  padding: 45px 155px 90px
  text-align: left
  position: relative
  z-index: 1

  .slick-slide
    outline: none

  +media('tablet')
    padding:  $mob-gutter

  h4, h5
    font-weight: 300

  .slick-arrow
    position: absolute
    top: 50%
    margin-top: -25px
    overflow: hidden
    text-indent: -1000px
    background-color: transparent
    background-image: url('../images/arrow.png')
    background-repeat: no-repeat
    background-position: center center
    width: 50px
    height: 50px
    padding: 0
    z-index: 5
    transition: background-color $transition

    &:hover
      background-color: $theme-color

    &.slick-prev
      left: 65px
      +media('tablet')
        left: 5px

    &.slick-next
      right: 65px
      transform: rotate(180deg)
      +media('tablet')
        right: 5px

  .content
    position: relative
    padding-left: 240px
    position: relative
    padding-top: 45px

    h4
      margin-bottom: 10px
    h5
      margin-bottom: 0

    +media('tablet')
      padding-left: 0

    .text
      +media('tablet')
        padding: 0 $mob-gutter

  .profile
    width: 240px
    position: absolute
    left: 0
    top: 50px

    +media('tablet')
      width: 100%
      left: 0
      top: 0
      position: relative
      margin-bottom: $mob-gutter

    .avatar,.company-logo
      position: relative
      img
        position: absolute
        opacity: 0
        height: 0
        width: 0

    .avatar
      position: relative
      display: block
      margin: 0 auto
      width: 120px
      height: 120px
      background-size: cover
      border-radius: 5px

      +media('tablet')
        margin: 0 auto
        display: block

      .company-logo
        position: absolute
        width: 50px
        height: 50px
        border-radius: 50%
        overflow: hidden
        background-repeat: no-repeat
        background-size: 50%
        background-color: $white
        background-position: center center
        top: -25px
        right: -25px
        standard-box-shadow()

/* ---- license ---- */
.license
  background: $soft-grey
  
  .flip-container
    perspective: 1000

  .flip-container.flipped .flipper, .flip-container.hover .flipper
    transform: rotateY(180deg)

  .flipper
    transition: 0.6s
    transform-style: preserve-3d
    position: relative


  .front, .back
    backface-visibility: hidden
    position: absolute
    top: 0
    left: 0

  .front
    z-index: 2
    transform: rotateY(0deg)

  .back
    transform: rotateY(180deg)

  
  .cards 
    width: 100%
    cf()
      
          
    .back
      .close
        position: absolute
        top: 0px
        right: 0px
        width: 20px
        height: 20px
        text-indent: -1000px
        background: url("../images/x.png") 50% 50% / 15px no-repeat
        border: 0px
        padding: 10px
        overflow: hidden
        transition: transform $transition
        &:hover
          transform: rotate(90deg)
      
      .card-inner
        &:hover
          border: 1px solid transparent
    button
      padding-top: 20px
      padding-bottom: 20px
      width: 100%
      
    .card
      span(1/3)
      min-height: 480px
      padding: 15px
      
      +media('tablet')
        span()
        width: 100%
        float: none
        max-width: 380px
        margin: 0 auto
      
      .copy
        text-align: left
        
        h1
          font-size: em(40)
          span(2/5)
          padding-top: 10px
          text-align: center
          line-height: 60px
        p
          span(3/5)
          padding-left: 10px
        
        .free
          color: $theme-color
    
    .card-inner
      standard-box-shadow()
      position: relative
      background: $white
      border-radius: 4px
      border: 1px solid transparent
      transition: border $transition
      overflow: hidden
      
      +media('minTab')
        &:hover
          border: 1px solid rgb(206, 224, 238)
          
          .corner
            opacity: 1
            filter: none
      
      .corner
        position: absolute
        top: -1px
        right: -1px
        width: 90px
        height: 90px
        opacity: 0
        cursor: pointer
        overflow: hidden
        transition: opacity $transition
        
        &:before
          content: ""
          position: absolute
          z-index: 0
          width: 0px
          height: 0px
          border-style: solid
          border-width: 0px 200px 200px 0px
          border-color: transparent rgb(235, 243, 253) transparent transparent
          
        &:after
          content: ""
          position: absolute
          width: 100%
          height: 100%
          left: 0px
          top: 0px
          background-image: url("../images/i.png")
          background-size: 7px
          z-index: 1
          background-repeat: no-repeat
          background-position: 73px 6px
    .top
      padding: 30px 20px
      border-bottom: 1px solid rgb(225, 232, 238)
      h2, h5
        font-weight: 300
      h5
        color: $dark-grey
      +media('minTab')
        height: 230px
    
    .bottom
      padding: 20px
      p
        color: $dark-grey
      h5
        font-weight: 300
      
      +media('minTab')
        height: 220px

/* ---- signup ---- */


.signup
  
  input
    background-image: url("../images/mailer.png")
    background-size: 17px
    height: 60px
    background-repeat: no-repeat
    background-position: 20px 50%
    padding: 20px 20px 20px 50px
    border: 2px solid $light-grey
    
    +media('minTab')
      border-top-left-radius: $border-radius
      border-bottom-left-radius: $border-radius
      border-right: 0px
      min-width: 325px
    
    +media('tablet')
      border-radius: $border-radius
      display: block 
      margin: $mob-gutter auto
  button
    +media('minTab')
      border-top-left-radius: 0px
      border-bottom-left-radius: 0px
      line-height: 60px
      position: relative
      top: 2px
      height: 60px
      padding-top: 0px
      padding-bottom: 0px

/* ---- footer ---- */

.footer
  width: 100%
  background: $dark-grey
  color: $white
  text-align: center

  a
    color: $white

  .inner
    position: relative
    margin: 0 auto
    padding: 30px 25px
    max-width: 1150px

  ul
    display: inline-block
    margin: 0
    padding: 0

    li
      padding: 0 20px
      list-style-type: none
      display: inline-block
      
      +media('tablet')
        display: block
        margin: 10px auto

      a
        font-size: em($h5)

        &:hover
          text-decoration: underline

  .footer-logo
    position: absolute
    top: 50%
    margin-top: -20px
    left: 25px
    background-image: url('../images/foot-logo.png')
    background-repeat: no-repeat
    background-position: center center
    background-size: 43px
    width: 43px
    height: 40px
    
    +media('tablet')
      position: static
      margin: 0px auto $mob-gutter

    img
      position: absolute
      opacity: 0
      height: 0
      width: 0

  .copyright
    position: absolute
    line-height: 100%
    padding: 34px 0 0 20px
    right: 25px
    top: 0
    font-weight: 300
    
    +media('tablet')
      position: static
      padding: 0
      margin: $mob-gutter auto 0
