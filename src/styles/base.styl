html
  font-size: ($p/16) * 100%

body

  h1
    font-size: em($h1)
    font-weight: 600

    +media('tablet')
      font-size: em($h2)

  h2
    font-size: em($h2)
    font-weight: 600

    +media('tablet')
      font-size: em($h3)

  h3
    font-size: em($h3)
    font-weight: 600

    +media('tablet')
      font-size: em($h4)

  h4
    font-size: em($h4)

    +media('tablet')
      font-size: em($h5)

  h5
    font-size: em($h5)

    +media('tablet')
      font-size: em($p)

  p
    font-size: em($p)


  *:focus
    outline: none
    -webkit-box-shadow: 0px 0px 4px 0px $focus
    box-shadow: 0px 0px 4px 0px $focus
